{
  "manifest_version": 3,
  "name": "Смена фона",
  "description": "Меняет фон страница с светлого на черный и наоборот!",
  "version": "1",
  "author": "AlexTheProgrammer",
  "browser_action": {
    "default_title": "Смена цвета фона",
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery.min.js", "changeBg.js"]
    }
  ],
  "permissions": ["activeTab"]
}
